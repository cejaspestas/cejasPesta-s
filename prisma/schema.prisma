
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contacto {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String
  telefono  String
  mensaje   String
  createdAt DateTime @default(now())
}



model Imagen {
  id           Int         @id @default(autoincrement())
  ruta         String
 
}

model Servicio {
  id            Int         @id @default(autoincrement())
  imagenRuta    String
  titulo        String
  descripcion   String
  
}

model Video {
  id            Int         @id @default(autoincrement())
  videoRuta     String
  titulo        String
  descripcion   String
 
}

model Cliente {
  id            Int         @id @default(autoincrement())
  rutaImagen    String
  nombre        String
  tipoServicio  String
  
}

model Precio {
  id            Int         @id @default(autoincrement())
  tipoServicio  String
  descripcion   String
  precio        Float
}

model Promocion {
  id            Int         @id @default(autoincrement())
  tipoServicio  String
  descripcion   String
 
}

model Equipo {
  id            Int         @id @default(autoincrement())
  rutaImagen    String
  cargo         String
  
}

model Product {
  id              Int      @id @default(autoincrement())
  title           String
  ImagenRuta      String
  description     String
  caracteristicas String
  priceProduct String
  cantidadBoletonumeros Int // Número de boletos disponibles
  priceBoleto           String
  createdAt       DateTime @default(now()) // Fecha de creación
}

model UserInfo {
  id               Int      @id @default(autoincrement())
  nombreCompleto   String
  email            String   @unique
  celular          String
  pais             String
  numerosEscogidos String   // Los números que el usuario ha escogido
  createdAt        DateTime @default(now()) // Fecha de creación
}

model Fecha {
  id        Int      @id @default(autoincrement())
  fInicio   String   // Fecha de inicio
  fFinal    String   // Fecha final
  createdAt DateTime @default(now()) // Fecha de creación
}