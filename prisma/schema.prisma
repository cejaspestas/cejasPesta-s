generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contacto {
    id         String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre    String
  email     String
  telefono  String
  mensaje   String
  createdAt DateTime @default(now())
}

model Imagen {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  ruta String
}

model Servicio {
   id         String   @id @default(auto()) @map("_id") @db.ObjectId
  imagenRuta  String
  titulo      String
  descripcion String
}

model Video {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  videoRuta   String
  titulo      String
  descripcion String
}

model Cliente {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  rutaImagen   String
  nombre       String
  tipoServicio String
}

model Precio {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  tipoServicio String
  descripcion  String
  precio       Float
}

model Promocion {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  tipoServicio String
  descripcion  String
}

model Equipo {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  rutaImagen String
  cargo      String
}

model Product {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title                 String
  ImagenRuta            String
  description           String
  caracteristicas       String
  priceProduct          String
  cantidadBoletonumeros Int
  priceBoleto           String
  createdAt             DateTime @default(now())
}

model UserInfo {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  nombreCompleto   String
  email            String   @unique
  celular          String
  pais             String
  numerosEscogidos String
  createdAt        DateTime @default(now())
}

model Fecha {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  fInicio   String
  fFinal    String
  createdAt DateTime @default(now())
}
